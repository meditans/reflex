Name: reflex
Version: 0.5.0
Synopsis: Higher-order Functional Reactive Programming
Description: Reflex is a high-performance, deterministic, higher-order Functional Reactive Programming system
License: BSD3
License-file: LICENSE
Author: Ryan Trinkle
Maintainer: ryan.trinkle@gmail.com
Stability: Experimental
Category: FRP
Build-type: Simple
Cabal-version: >=1.9.2
homepage: https://github.com/reflex-frp/reflex
bug-reports: https://github.com/reflex-frp/reflex/issues

library
  hs-source-dirs: src
  build-depends:
    MemoTrie == 0.6.*,
    base >= 4.7 && < 4.10,
    bifunctors >= 5.2 && < 5.5,
    containers == 0.5.*,
    dependent-map >= 0.2.2 && < 0.3,
    dependent-sum == 0.3.*,
    exception-transformers == 0.4.*,
    haskell-src-exts >= 1.16 && < 1.18,
    haskell-src-meta == 0.6.*,
    lens >= 4.7 && < 5,
    monad-control >= 1.0.1 && < 1.1,
    mtl >= 2.1 && < 2.3,
    primitive >= 0.5 && < 0.7,
    ref-tf == 0.4.*,
    semigroupoids >= 4.0 && < 6,
    semigroups >= 0.16 && < 0.19,
    stm == 2.4.*,
    syb >= 0.5 && < 0.7,
    template-haskell >= 2.9 && < 2.12,
    these >= 0.4 && < 0.8,
    transformers >= 0.2,
    transformers-compat >= 0.3

  exposed-modules:
    Data.Functor.Misc,
    Data.WeakBag,
    Reflex,
    Reflex.Class,
    Reflex.Deletable.Class,
    Reflex.Dynamic,
    Reflex.Dynamic.TH,
    Reflex.Dynamic.Uniq,
    Reflex.DynamicWriter,
    Reflex.Host.Class,
    Reflex.PerformEvent.Base,
    Reflex.PerformEvent.Class,
    Reflex.PostBuild.Class,
    Reflex.Pure,
    Reflex.Spider,
    Reflex.Spider.Internal

  other-extensions: TemplateHaskell
  ghc-options: -Wall -fwarn-tabs -funbox-strict-fields -O2
  ghc-prof-options: -auto-all

test-suite semantics
  type: exitcode-stdio-1.0
  main-is: semantics.hs
  hs-source-dirs: test
  ghc-options: -O2 -Wall -rtsopts
  build-depends:
    base,
    bifunctors,
    containers,
    deepseq >= 1.3 && < 1.5,
    dependent-map,
    dependent-sum,
    mtl,
    ref-tf,
    reflex,
    split,
    transformers >= 0.3

test-suite hlint
  type: exitcode-stdio-1.0
  main-is: hlint.hs
  hs-source-dirs: test
  build-depends: base, hlint == 1.9.*
  if impl(ghcjs)
    buildable: False

benchmark spider-bench
  type: exitcode-stdio-1.0
  hs-source-dirs: bench
  main-is: Main.hs
  ghc-options: -Wall -O2 -rtsopts
  build-depends:
    base,
    criterion == 1.1.*,
    deepseq >= 1.3 && < 1.5,
    dependent-map,
    dependent-sum,
    mtl,
    primitive,
    reflex,
    stm,
    transformers >= 0.3

benchmark saulzar-bench
  type: exitcode-stdio-1.0
  hs-source-dirs: bench test
  c-sources: bench-cbits/checkCapability.c
  main-is: RunAll.hs
  ghc-options: -Wall -O2 -rtsopts -threaded
  ghc-prof-options: -auto-all
  build-depends:
    base,
    containers == 0.5.*,
    criterion == 1.1.*,
    deepseq >= 1.3 && < 1.5,
    dependent-map,
    dependent-sum,
    loch-th,
    mtl,
    primitive,
    process,
    ref-tf >= 0.4,
    reflex,
    split,
    stm,
    time,
    transformers >= 0.3

source-repository head
  type: git
  location: https://github.com/reflex-frp/reflex
